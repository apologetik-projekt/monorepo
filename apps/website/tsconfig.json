{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"target": "ES2022",
		"incremental": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"#/*": ["./*"],
			"@payload-config": ["payload/payload.config.ts"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts",
		"types/payload.d.ts",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
